
@model List<Prisjakt.Models.ProductModel>

@{
    ViewBag.Title = "Prisjakt-erbjudanden";
}

<script id="template" type="x-tmpl-mustache">
    {{#products}}
    <tr id="tr{{Id}}">
        <td><a href="{{Url}}" target="_blank"><img class="image-size" src="{{ImageUrl}}" alt="{{Name}}"></a></td>
        <td><a href="{{Url}}" target="_blank">{{Name}}</a><sup><span class="isNew" id="p<%= p.Id[i] %>">{{#IsNew}}Ny!{{/IsNew}}</span></sup><br><blockquote>{{Category}}<br /><!--<span class="lastUpdated">({{LastUpdated}})</span>--></blockquote></td>
        <td class="nobr"><a href="{{Url}}" target="_blank">{{PriceDrop}} %</a></td>
        <td class="nobr"><a href="#top" onclick="AddNotification({{Id}}, '{{Name}}', {{Price}}, {{PriceDrop}}, '{{ImageUrl}}')">{{Price}} :-</a></td>
        <td></td>
    </tr>
    {{/products}}
</script>

<div class="row">
    <div class="col-md-12" name="top">
        <h2 style="margin-bottom:20px;">Gottigt på Prisjakt just nu...</h2>

        <table class="table table-hover">
            <tbody id="productTableBody"></tbody>
        </table>
    </div>
</div>
